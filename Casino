from random import shuffle
import sys
import time
import os     # –≠—Ç–æ—Ç –∏–º–ø–æ—Ä—Ç –Ω—É–∂–µ–Ω –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–∏ —á–∏—Å—Ç–∫–∏ —ç–∫—Ä–∞–Ω–∞ 

item_list = ['üçå', 'üçé', 'ü••'],['üçå', 'üçé', 'ü••'], ['üçå', 'üçé', 'ü••']
def shuffle_list(mylist):
    shuffle(mylist[0])
    shuffle(mylist[1])
    shuffle(mylist[2])
    return mylist

def game():
    rerol = 'y'
    
#game start
    print('  Welcome to the "Edwin ruletka" ', item_list[0], item_list[1], item_list[2], sep='\n')
    start = input('      start? (y / n): ')
    os.system("CLS") # –í–æ—Ç –µ—ë –ø–µ—Ä–≤–æ–µ –ø—Ä–∏–º–µ–Ω–µ–Ω–∏–µ - –≤–æ–∑–º–æ–∂–Ω–æ —Ç—ã –Ω–∞–π–¥—ë—à—å –µ–π –¥—Ä—É–≥–æ–µ –º–µ—Å—Ç–æ
    
#player settings
    cash = int(input('      your sallar: '))
    game_cash = cash * 0.1
    os.system("CLS")
    
    print('you have ()', int(game_cash), ') game points in your game balance!')
    print('Game point per rol:  5  |  10  |  25 | 50 | 100 ')
    point_rol = int(input())
    game_cash = game_cash - point_rol
    os.system("CLS")
    
#game_logica
    while rerol == 'y':
        for i in range(1, 20):
            sys.stderr.write(f"{shuffle_list(item_list)/r")  # –ù–∞ —ç—Ç–æ–º –º–æ–º–µ–Ω—Ç–µ —É –º–µ–Ω—è –∫–æ–º–ø–∏—Ç—è—Ü–∏—è —Å–ª–æ–º–∞–ª–∞—Å—å)) –ü—Ä–∏—à–ª–æ—Å—å –∑–∞–∫–æ–º–µ–Ω—Ç–∏—Ç—å —ç—Ç–æ—Ç –∫—É—Å–æ–∫, –æ—á–µ–Ω—å –º–Ω–æ–≥–æ –¥–µ–Ω–µ–≥ –≤—ã–∏–≥—Ä–∞–ª)))
            time.sleep(.20)
        if item_list[0] == item_list[1] == item_list[2]:
            game_cash = game_cash + (point_rol * 100)
        else: 
            if item_list[0][0] == item_list[1][0] == item_list[2][0]:
                game_cash = game_cash + (point_rol * 5)
            elif item_list[0][1] == item_list[1][1] == item_list[2][1]:
                game_cash = game_cash + (point_rol * 5)
            elif item_list[0][2] == item_list[1][2] == item_list[2][2]:
                game_cash = game_cash + (point_rol * 5) 
        if game_cash - point_rol < 0:
            print('you are looser')
            break
        print('Balance: ', game_cash)
        rerol = input('rerol? (y / n): ')
        if rerol == 'y':
            game_cash = game_cash - point_rol
        elif rerol == 'n':
            break
    print('Balance: ', game_cash)
    
    

game()
